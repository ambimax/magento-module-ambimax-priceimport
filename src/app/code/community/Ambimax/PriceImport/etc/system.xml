<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <priceimport_options translate="label" module="ambimax_priceimport">
            <label>Price Import Options</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <options translate="label">
                    <label>Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Price Import</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <cronjob translate="label">
                            <label>Cronjob</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>0 * * * * (hourly) | 0 22 * * * (22 o `clock)</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </cronjob>
                        <file_location translate="label">
                            <label>Import File Lokation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ambimax_priceimport/system_config_source_file_location</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </file_location>
                        <file_path>
                            <label>File Path</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                                <file_location>local</file_location>
                            </depends>
                        </file_path>
                        <url_path>
                            <label>URL Path</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                                <file_location>url</file_location>
                            </depends>
                        </url_path>
                        <file_sftp_host>
                            <label>SFTP Host</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                                <file_location>sftp</file_location>
                            </depends>
                        </file_sftp_host>
                        <file_sftp_username>
                            <label>SFTP Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>26</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                                <file_location>sftp</file_location>
                            </depends>
                        </file_sftp_username>
                        <file_sftp_password>
                            <label>SFTP Password</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>27</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                                <file_location>sftp</file_location>
                            </depends>
                        </file_sftp_password>
                        <file_sftp_path>
                            <label>SFTP File Path</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>28</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                                <file_location>sftp</file_location>
                            </depends>
                        </file_sftp_path>
                        <file_sftp_tmp>
                            <label>SFTP Tmp File Path</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>29</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                                <file_location>sftp</file_location>
                            </depends>
                        </file_sftp_tmp>
                    </fields>
                </options>
            </groups>
        </priceimport_options>
    </sections>
</config>